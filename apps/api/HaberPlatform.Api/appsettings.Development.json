{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "Default": "Host=localhost;Port=5432;Database=haber_platform;Username=haber;Password=haber123"
  },
  "Jwt": {
    "Issuer": "HaberPlatform",
    "Audience": "HaberPlatformClients",
    "Key": "HaberPlatformDevSecretKey2024MustBeAtLeast32Chars!",
    "ExpiresMinutes": 60
  },
  "Publishing": {
    "X": {
      "Enabled": true,
      "ApiKey": "",
      "ApiSecret": ""
    },
    "Instagram": {
      "Enabled": true,
      "MaxCaptionLength": 2200,
      "DefaultHashtags": "#haber #g√ºndem"
    },
    "MobilePush": {
      "Enabled": false
    }
  },
  "Meta": {
    "GraphVersion": "v19.0",
    "BaseUrl": "https://graph.facebook.com"
  },
  "X": {
    "ClientId": "",
    "ClientSecret": "",
    "RedirectUri": "http://localhost:5078/api/v1/integrations/x/callback",
    "AppBearerToken": "",
    "ApiBaseUrl": "https://api.x.com"
  },
  "XIngestion": {
    "PollingIntervalSeconds": 60,
    "MaxResultsPerRequest": 50,
    "AlertAfterFailures": 3
  },
  "Media": {
    "RootDir": "tools/storage/media",
    "PublicBasePath": "/media",
    "MaxFileSizeBytes": 10485760,
    "AllowedContentTypes": ["image/jpeg", "image/png", "image/webp", "image/gif"]
  },
  "AIImage": {
    "Enabled": true,
    "Provider": "PollinationsLegacy",
    "TargetWidth": 1280,
    "TargetHeight": 720,
    "PromptTemplate": "abstract news illustration, {category}, flat design, minimal, no people, no text",
    "SafetyClauses": "abstract, no faces, no logos, no text",
    "Pollinations": {
      "BaseUrl": "https://image.pollinations.ai/prompt/",
      "TimeoutSeconds": 180,
      "UserAgent": "HaberPlatform/1.0",
      "MaxRetries": 2
    }
  }
}
